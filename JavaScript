    <script>
        // Get DOM elements
        const businessCard = document.getElementById('businessCard');
        const flipCountElement = document.getElementById('flipCount');
        const colorBtn = document.getElementById('colorBtn');
        const infoBtn = document.getElementById('infoBtn');
        
        // Initialize flip count
        let flipCount = 0;
        
        // Flip card on click
        businessCard.addEventListener('click', function() {
            this.classList.toggle('flipped');
            
            // Only increment when flipping to back side
            if (this.classList.contains('flipped')) {
                flipCount++;
                flipCountElement.textContent = flipCount;
            }
        });
        
        // Change color theme
        colorBtn.addEventListener('click', function() {
            const hues = ['#6a11cb', '#2575fc', '#cb11a3', '#11cb6a', '#cbcb11'];
            const randomHue = hues[Math.floor(Math.random() * hues.length)];
            
            document.body.style.background = `linear-gradient(135deg, ${randomHue} 0%, #2575fc 100%)`;
        });
        
        // Show contact info alert
        infoBtn.addEventListener('click', function() {
            alert("Contact Information:\n\nName: Alex Johnson\nTitle: Senior UX Designer\nEmail: alex.johnson@example.com\nPhone: +1 (555) 123-4567\nLocation: San Francisco, CA");
        });
        
        // Add mouse move tilt effect
        businessCard.addEventListener('mousemove', function(e) {
            if (!this.classList.contains('flipped')) {
                const card = this;
                const cardWidth = card.offsetWidth;
                const cardHeight = card.offsetHeight;
                const centerX = card.offsetLeft + cardWidth/2;
                const centerY = card.offsetTop + cardHeight/2;
                const mouseX = e.pageX - centerX;
                const mouseY = e.pageY - centerY;
                const rotateX = (mouseY / cardHeight * 10).toFixed(2);
                const rotateY = (mouseX / cardWidth * -10).toFixed(2);
                
                card.style.transform = `perspective(1000px) rotateX(${rotateX}deg) rotateY(${rotateY}deg)`;
            }
        });
        
        businessCard.addEventListener('mouseleave', function() {
            if (!this.classList.contains('flipped')) {
                this.style.transform = 'perspective(1000px) rotateX(0) rotateY(0)';
            }
        });
    </script>
